{
  "name": "inventory-management-turso",
  "version": "1.0.0",
  "description": "爆速在庫管理システム - Bun + Hono + Turso + React",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "bun --filter api dev",
    "dev:frontend": "bun --filter frontend dev",
    "dev": "bun run dev:api & bun run dev:frontend",
    "build": "bun --filter api build && bun --filter frontend build",
    "db:generate": "bun --filter api db:generate",
    "db:migrate": "bun --filter api db:migrate",
    "db:studio": "bun --filter api db:studio",
    "db:seed": "bun --filter api db:seed",
    "deploy": "bun --filter api deploy",
    "type-check": "bun --filter api type-check && bun --filter frontend type-check",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "^1.1.13",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
