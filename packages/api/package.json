{
  "name": "api",
  "version": "1.0.0",
  "description": "Hono API with Turso (Cloudflare Pages)",
  "type": "module",
  "scripts": {
    "dev": "bun --hot --env-file=.dev.vars src/index.ts",
    "dev:wrangler": "wrangler pages dev --compatibility-date=2024-01-01 --port 8787",
    "build": "bun build src/index.ts --outfile dist/_worker.js --target bun",
    "deploy": "wrangler pages deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/scripts/seed.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@libsql/client": "^0.14.0",
    "drizzle-orm": "^0.36.4",
    "firebase-admin": "^13.0.1",
    "hono": "^4.6.14",
    "ulid": "^3.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250115.0",
    "drizzle-kit": "^0.30.1",
    "wrangler": "^3.94.0",
    "typescript": "^5.7.2"
  }
}
